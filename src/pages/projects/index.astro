---
import { Image } from 'astro:assets'

import { Button, Collapse, Icon } from 'astro-pure/user'
import PageLayout from '@/layouts/CommonPage.astro'
import ProjectSection from '@/components/projects/ProjectSection.astro'
import Sponsors from '@/components/projects/Sponsors.astro'
import Sponsorship from '@/components/projects/Sponsorship.astro'
import alipay from '@/assets/alipay-qrcode.webp'
import KeyIcon from '@/assets/icons/key.svg'
import wechat from '@/assets/wechat-qrcode.webp'

const headings = [
  { depth: 2, slug: 'activities', text: 'Github Activities' },
  { depth: 2, slug: 'front', text: '前端小项目' },
  { depth: 2, slug: 'sponsorship', text: '捐赠' },
]
---

<PageLayout title='项目' {headings} view>
  <h3 id='activities'>Github Activities</h3>
  <p>
    <Image
      src='https://file.cdn.zinc233.top/imgs/common/github-contribution-grid-snake.svg'
      alt='github activities'
      inferSize
      loading='lazy'
    />
  </p>
  <!-- <p>
    If you think it would be useful or interesting to collaborate on a project, you can donate to
    support my work or contact me to discuss a project.
  </p> -->
  <!-- <Button title='Checkout sponsorship' class='w-fit' href='#sponsorship'>
    <Icon class='size-5' name='receive-money' slot='before' />
  </Button> -->

  <h2 id='front'>前端小项目</h2>
  <ProjectSection
    projects={[
      {
        name: 'cf-clipboard',
        description: '基于 Cloudflare Workers 的网络文本共享服务',
        links: [
          { type: 'github', href: 'https://github.com/Zinc23333/cf-clipboard' },
          { type: 'site', href: 'https://clipboard.zinc233.top' },
        ]
      }
    ]}
  />

  <h2 id='sponsorship'>捐赠</h2>
  <p>感谢大佬的捐赠🙇</p>
    <Sponsorship
    methods={[
      { name: 'WeChat', icon: 'wechat-pay', image: wechat },
      { name: 'Alipay', icon: 'alipay', image: alipay }
    ]}
  />

</PageLayout>

<style>
  .sponsorship-card {
    & .sponsorship-card-img {
      opacity: 0.3;
      --un-blur: blur(4px);
      filter: var(--un-blur);
    }

    &:hover {
      & .sponsorship-card-icon {
        opacity: 0;
      }
      & .sponsorship-card-img {
        opacity: 1;
        --un-blur: blur(0);
      }
    }
  }
</style>
